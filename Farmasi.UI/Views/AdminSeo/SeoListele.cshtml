@{
    Layout = "_AdminLayout";
}
@model List<Seo>
<div style="width:100%">
    @*<a asp-action="SeoEkle" asp-controller="AdminSeo" class="btn btn-primary">Seo Ekle</a>*@

</div>
<br />
@if (TempData["Ekleme"] != null)
{

    <div class="alert success" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Ekleme"]
    </div>
}

@if (TempData["Guncellendi"] != null)
{

    <div class="alert info" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Guncellendi"]
    </div>
}

@if (TempData["Silindi"] != null)
{

    <div class="alert warning" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Silindi"]
    </div>
}
<table id="example" class="display nowrap" style="width:100%">
    <thead>
        <tr>
            <th>İşlemler</th>
            <th>Seo Kodu</th>
            <th>Resim</th>
            <th>Ad</th>
            <th>Aciklama</th>
            <th>Fiyat</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*<a class="btn btn-danger" asp-action="SeoSil" asp-controller="AdminSeo" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to DELETE?');">Sil</a><br />*@
                    <a class="btn btn-info" asp-action="SeoGuncelle" asp-controller="AdminSeo" asp-route-id="@item.ID">Guncelle</a><br />

                </td>
                <td>@item.title</td>
                <td width="100" height="100" align="center"><img src="/images/@item.icon" height="100" width="100"></td>
                <td>@item.author</td>
                <td>@item.keywords</td>
                <td>@item.description</td>


            </tr>
        }
    </tbody>
</table>