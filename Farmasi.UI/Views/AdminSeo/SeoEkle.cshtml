@{

    Layout = "_AdminLayout";

}

@model Seo
@if (ViewBag.state == "update")
{<form class="form-horizontal" asp-action="SeoGuncelle" asp-controller="AdminSeo" enctype="multipart/form-data">
        <div class="card-body">

            <fieldset style="margin-bottom:50px">
                <legend style="float:none">

                    Seo Ekleme Sayfası
                </legend>





                <div class="form-group row">
                    <label class="col-sm-2 col-form-label " onchange="PreviewImage();">icon</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="icon" value="@Model.icon" name="icon" hidden>
                        <input type="file" class="form-control uploadImage" asp-for="icon" accept=".png, .jpg,.jpeg," id="icon" placeholder="icon seçiniz" onchange='openFile(event)'>

                        <span id="error-message" class="validation-error-label"></span>
                        <span asp-validation-for="icon" style="color:crimson"></span>
                    </div>
                    <div class="col-sm-2">
                        <img id='output' style="width : 100px;height:100px" src="/images/@Model.icon"  />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">title</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="title" type="text" placeholder="title giriniz">
                        <span asp-validation-for="title" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">description</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="description" type="text" placeholder="description giriniz">
                        <span asp-validation-for="description" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">author</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="author" type="text" placeholder="author giriniz">
                        <span asp-validation-for="author" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">keywords</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="keywords" type="text" placeholder="keywords giriniz">
                        <span asp-validation-for="keywords" style="color:crimson"></span>
                    </div>
                </div>






            </fieldset>

        </div>
        <!-- /.card-body -->
        <div class=" has-error has-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Kaydet</button>
            <button type="reset" class="btn btn-default float-right">Temizle</button>
        </div>
        <!-- /.card-footer -->
    </form> }
else
{ <form class="form-horizontal" asp-action="UrunEkle" asp-controller="AdminUrun" enctype="multipart/form-data">
        <div class="card-body">
            <fieldset style="margin-bottom:50px">
                <legend style="float:none">

                    Seo Ekleme Sayfası
                </legend>





                <div class="form-group row">
                    <label class="col-sm-2 col-form-label " onchange="PreviewImage();">icon</label>
                    <div class="col-sm-8">
                      
                        <input type="file" class="form-control uploadImage" asp-for="icon" accept=".png, .jpg,.jpeg," id="icon" placeholder="icon seçiniz" onchange='openFile(event)'>

                        <span id="error-message" class="validation-error-label"></span>
                        <span asp-validation-for="icon" style="color:crimson"></span>
                    </div>
                    <div class="col-sm-2">
                        <img id='output' style="width : 100px;height:100px"   />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">title</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="title" type="number" placeholder="title giriniz">
                        <span asp-validation-for="title" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">description</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="description" type="text" placeholder="description giriniz">
                        <span asp-validation-for="description" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">author</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="author" type="text" placeholder="author giriniz">
                        <span asp-validation-for="author" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">keywords</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="keywords" type="text" placeholder="keywords giriniz">
                        <span asp-validation-for="keywords" style="color:crimson"></span>
                    </div>
                </div>

            </fieldset>

        </div>
        <!-- /.card-body -->
        <div class=" has-error has-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Save</button>
            <button type="reset" class="btn btn-default float-right">Clear</button>
        </div>
        <!-- /.card-footer -->
    </form> }




