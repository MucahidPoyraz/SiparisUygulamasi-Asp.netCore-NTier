@{
    Layout = "_AdminLayout";
}
@model List<KategoriOne>
<div style="width:100%">
    <a asp-action="UstKategoriEkle" asp-controller="AdminUstKategori" class="btn btn-primary">Üst Kategori Ekle</a>
</div>
<br />
@if (TempData["Ekleme"] != null)
{

    <div class="alert success" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Ekleme"]
    </div>
}

@if (TempData["Guncellendi"] != null)
{

    <div class="alert info" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Guncellendi"]
    </div>
}

@if (TempData["Silindi"] != null)
{

    <div class="alert warning" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Silindi"]
    </div>
}
<table id="example" class="display nowrap" style="width:100%">
    <thead>
        <tr>
            <th>İşlemler</th>
            <th>Alt Katagoriler</th>
            <th>Üst Kategori Adı</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-danger" asp-action="UstKategoriSil" asp-controller="AdminUstKategori" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to DELETE?');">Sil</a><br />
                    <a class="btn btn-info" asp-action="UstKategoriGuncelle" asp-controller="AdminUstKategori" asp-route-id="@item.ID">Guncelle</a><br />

                </td>
                <td>

                    <a class="btn btn-info" asp-action="AltKategoriListele" asp-controller="AdminAltKategori" asp-route-id="@item.ID">Alt Kategorilere Git</a><br />

                </td>

                <td>@item.Ad</td>

            </tr>
        }
    </tbody>
</table>