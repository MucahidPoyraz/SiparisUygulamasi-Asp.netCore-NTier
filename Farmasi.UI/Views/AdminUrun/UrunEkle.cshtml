@{

    Layout = "_AdminLayout";

}

@model Urun
@if (ViewBag.state == "update")
{<form class="form-horizontal" asp-action="UrunGuncelle" asp-controller="AdminUrun" enctype="multipart/form-data">
     <div class="card-body">

         <fieldset style="margin-bottom:50px">
             <legend style="float:none">

                 Ürün Ekleme Sayfası
             </legend>

             <div class="form-group">
                 <input type="text" class="form-control" asp-for="KategoriTwoId" value="@ViewBag.KategorTwoId" hidden>

             </div>



             <div class="form-group row">
                 <label class="col-sm-2 col-form-label " onchange="PreviewImage();">Resim</label>
                 <div class="col-sm-8">
                     <input type="text" asp-for="Resim" value="@Model.Resim" name="Resim" hidden>
                     <input type="file" class="form-control uploadImage" asp-for="Resim" accept=".png, .jpg,.jpeg," id="Resim" placeholder="resim seçiniz" onchange='openFile(event)'>

                     <span id="error-message" class="validation-error-label"></span>
                     <span asp-validation-for="Resim" style="color:crimson"></span>
                 </div>
                 <div class="col-sm-2">
                     <img id='output' style="width : 100px;height:100px" src="/images/@Model.Resim" / />
                 </div>
             </div>

             <div class="form-group row">
                 <label class="col-sm-2 col-form-label">UrunKod</label>
                 <div class="col-sm-10">
                     <input class="form-control" asp-for="UrunKod" type="number" placeholder="UrunKod giriniz">
                     <span asp-validation-for="UrunKod" style="color:crimson"></span>
                 </div>
             </div>

             <div class="form-group row">
                 <label class="col-sm-2 col-form-label">Ad</label>
                 <div class="col-sm-10">
                     <input class="form-control" asp-for="Ad" type="text" placeholder="Ad giriniz">
                     <span asp-validation-for="Ad" style="color:crimson"></span>
                 </div>
             </div>

             <div class="form-group row">
                 <label class="col-sm-2 col-form-label">Aciklama</label>
                 <div class="col-sm-10">
                     <input class="form-control" asp-for="Aciklama" type="text" placeholder="Aciklama giriniz">
                     <span asp-validation-for="Aciklama" style="color:crimson"></span>
                 </div>
             </div>

             <div class="form-group row">
                 <label class="col-sm-2 col-form-label">Fiyat</label>
                 <div class="col-sm-10">
                     <input class="form-control" asp-for="Fiyat" type="text" pattern="[+]?[0-9]*[,]?[0-9]+" step="0.01" min="0" placeholder="12,34(virgül ile)">
                     <span asp-validation-for="Fiyat" style="color:crimson"></span>
                 </div>
             </div>




         </fieldset>

     </div>
        <!-- /.card-body -->
        <div class=" has-error has-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Kaydet</button>
            <button type="reset" class="btn btn-default float-right">Temizle</button>
        </div>
        <!-- /.card-footer -->
    </form> }
else
{ <form class="form-horizontal" asp-action="UrunEkle" asp-controller="AdminUrun" enctype="multipart/form-data">
        <div class="card-body">
            <fieldset style="margin-bottom:50px">
                <legend style="float:none">

                    Ürün Ekleme Sayfası
                </legend>

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="KategoriTwoId" value="@ViewBag.KategoriTwoId" hidden>

                </div>

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="ID" value="0" hidden>

                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label " onchange="PreviewImage();">Resim</label>
                    <div class="col-sm-8">
                        <input type="file" class="form-control uploadImage" asp-for="Resim" id="Resim" accept=".png, .jpg,.jpeg," placeholder="resim seçiniz" onchange='openFile(event)'>

                        <span id="error-message" class="validation-error-label"></span>
                        <span asp-validation-for="Resim" style="color:crimson"></span>
                    </div>
                    <div class="col-sm-2">
                        <img id='output' style="width : 100px;height:100px" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">UrunKod</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="UrunKod" type="number" placeholder="UrunKod giriniz">
                        <span asp-validation-for="UrunKod" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Ad</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Ad" type="text" placeholder="Ad giriniz">
                        <span asp-validation-for="Ad" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Aciklama</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Aciklama" type="text" placeholder="Aciklama giriniz">
                        <span asp-validation-for="Aciklama" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Fiyat</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Fiyat" type="text" pattern="[+]?[0-9]*[,]?[0-9]+" step="0.01" min="0" placeholder="12,34(virgül ile)">
                        <span asp-validation-for="Fiyat" style="color:crimson"></span>
                    </div>
                </div>




            </fieldset>

        </div>
        <!-- /.card-body -->
        <div class=" has-error has-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Save</button>
            <button type="reset" class="btn btn-default float-right">Clear</button>
        </div>
        <!-- /.card-footer -->
    </form> }




