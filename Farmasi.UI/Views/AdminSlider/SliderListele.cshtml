@{
    Layout = "_AdminLayout";
}
@model List<Slider>
<div style="width:100%">
    @*<a asp-action="SliderEkle" asp-controller="AdminSlider" class="btn btn-primary">Slider Ekle</a>*@

</div>
<br />
@if (TempData["Ekleme"] != null)
{

    <div class="alert success" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Ekleme"]
    </div>
}

@if (TempData["Guncellendi"] != null)
{

    <div class="alert info" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Guncellendi"]
    </div>
}

@if (TempData["Silindi"] != null)
{

    <div class="alert warning" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Silindi"]
    </div>
}
<table id="example" class="display nowrap" style="width:100%">
    <thead>
        <tr>
            <th>İşlemler</th>

            <th>Resim</th>
            <th>Yazi1</th>
            <th>Yazi2</th>
            <th>Yazi3</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*<a class="btn btn-danger" asp-action="SliderSil" asp-controller="AdminSlider" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to DELETE?');">Sil</a><br />*@
                    <a class="btn btn-info" asp-action="SliderGuncelle" asp-controller="AdminSlider" asp-route-id="@item.ID">Guncelle</a><br />

                </td>

                <td width="100" height="100" align="center"><img src="/images/@item.Resim" height="100" width="100"></td>
                <td>@item.Yazi1</td>
                <td>@item.Yazi2</td>
                <td>@item.Yazi3</td>


            </tr>
        }
    </tbody>
</table>