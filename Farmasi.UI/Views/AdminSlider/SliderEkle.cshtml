@{

    Layout = "_AdminLayout";

}

@model Slider
@if (ViewBag.state == "update")
{<form class="form-horizontal" asp-action="SliderGuncelle" asp-controller="AdminSlider" enctype="multipart/form-data">
        <div class="card-body">

            <fieldset style="margin-bottom:50px">
                <legend style="float:none">

                    Slider Ekleme Sayfası
                </legend>





                <div class="form-group row">
                    <label class="col-sm-2 col-form-label " onchange="PreviewImage();">Resim</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="Resim" value="@Model.Resim" name="Resim" hidden>
                        <input type="file" class="form-control uploadImage" asp-for="Resim" accept=".png, .jpg,.jpeg," id="Resim" placeholder="Resim seçiniz" onchange='openFile(event)'>

                        <span id="error-message" class="validation-error-label"></span>
                        <span asp-validation-for="Resim" style="color:crimson"></span>
                    </div>
                    <div class="col-sm-2">
                        <img id='output' style="width : 100px;height:100px" src="/images/@Model.Resim"  />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Yazi1</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Yazi1" type="text" placeholder="Yazi1 giriniz">
                        <span asp-validation-for="Yazi1" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Yazi2</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Yazi2" type="text" placeholder="Yazi2 giriniz">
                        <span asp-validation-for="Yazi2" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Yazi3</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Yazi3" type="text" placeholder="Yazi3 giriniz">
                        <span asp-validation-for="Yazi3" style="color:crimson"></span>
                    </div>
                </div>

                






            </fieldset>

        </div>
        <!-- /.card-body -->
        <div class=" has-error has-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Kaydet</button>
            <button type="reset" class="btn btn-default float-right">Temizle</button>
        </div>
        <!-- /.card-footer -->
    </form> }
else
{ <form class="form-horizontal" asp-action="SliderEkle" asp-controller="AdminSlider" enctype="multipart/form-data">
