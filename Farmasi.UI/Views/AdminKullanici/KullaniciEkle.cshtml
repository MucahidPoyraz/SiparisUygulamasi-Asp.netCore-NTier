@{

    Layout = "_AdminLayout";

}

@model Kullanici
@if (ViewBag.state == "update")
{<form class="form-horizontal" asp-action="KullaniciGuncelle" asp-controller="AdminKullanici" enctype="multipart/form-data">
        <div class="card-body">

            <fieldset style="margin-bottom:50px">
                <legend style="float:none">

                   Kullanici Ekleme Sayfası
                </legend>

             



                <div class="form-group row">
                    <label class="col-sm-2 col-form-label " onchange="PreviewImage();">Resim</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="Resim" value="@Model.Resim" name="Resim" hidden>
                        <input type="file" class="form-control uploadImage" asp-for="Resim" accept=".png, .jpg,.jpeg," id="Resim" placeholder="resim seçiniz" onchange='openFile(event)'>

                        <span id="error-message" class="validation-error-label"></span>
                        <span asp-validation-for="Resim" style="color:crimson"></span>
                    </div>
                    <div class="col-sm-2">
                        <img id='output' style="width : 100px;height:100px" src="/images/@Model.Resim"  />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">KullanıcıAdSoyad</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="KullanıcıAdSoyad" type="text" placeholder="KullanıcıAdSoyad giriniz">
                        <span asp-validation-for="KullanıcıAdSoyad" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Email" type="text" placeholder="Email giriniz">
                        <span asp-validation-for="Email" style="color:crimson"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Parola</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Parola" type="text" placeholder="Parola giriniz">
                        <span asp-validation-for="Parola" style="color:crimson"></span>
                    </div>
                </div>

               




            </fieldset>

        </div>
        <!-- /.card-body -->
        <div class=" has-error has-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Kaydet</button>
            <button type="reset" class="btn btn-default float-right">Temizle</button>
        </div>
        <!-- /.card-footer -->
    </form> }
else
{ <form class="form-horizontal" asp-action="UrunEkle" asp-controller="AdminUrun" enctype="multipart/form-data">
      <div class="card-body">
          <fieldset style="margin-bottom:50px">
              <legend style="float:none">

                  Kullanici Ekleme Sayfası
              </legend>





              <div class="form-group row">
                  <label class="col-sm-2 col-form-label " onchange="PreviewImage();">Resim</label>
                  <div class="col-sm-8">
                   
                      <input type="file" class="form-control uploadImage" asp-for="Resim" accept=".png, .jpg,.jpeg," id="Resim" placeholder="resim seçiniz" onchange='openFile(event)'>

                      <span id="error-message" class="validation-error-label"></span>
                      <span asp-validation-for="Resim" style="color:crimson"></span>
                  </div>
                  <div class="col-sm-2">
                      <img id='output' style="width : 100px;height:100px"   />
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 col-form-label">KullanıcıAdSoyad</label>
                  <div class="col-sm-10">
                      <input class="form-control" asp-for="KullanıcıAdSoyad" type="text" placeholder="KullanıcıAdSoyad giriniz">
                      <span asp-validation-for="KullanıcıAdSoyad" style="color:crimson"></span>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 col-form-label">Email</label>
                  <div class="col-sm-10">
                      <input class="form-control" asp-for="Email" type="text" placeholder="Email giriniz">
                      <span asp-validation-for="Email" style="color:crimson"></span>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 col-form-label">Parola</label>
                  <div class="col-sm-10">
                      <input class="form-control" asp-for="Parola" type="text" placeholder="Parola giriniz">
                      <span asp-validation-for="Parola" style="color:crimson"></span>
                  </div>
              </div>






          </fieldset>

      </div>
        <!-- /.card-body -->
        <div class=" has-error has-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Save</button>
            <button type="reset" class="btn btn-default float-right">Clear</button>
        </div>
        <!-- /.card-footer -->
    </form> }




