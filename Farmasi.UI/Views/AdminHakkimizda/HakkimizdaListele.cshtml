@{
    Layout = "_AdminLayout";
}
@model List<Hakkimizda>
<div style="width:100%">
    @*<a asp-action="HakkimizdaListele" asp-controller="AdminHakkimizda" class="btn btn-primary">Hakkımızda Ekle</a>*@
</div>
<br />
@if (TempData["Ekleme"] != null)
{

    <div class="alert success" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Ekleme"]
    </div>
}

@if (TempData["Guncellendi"] != null)
{

    <div class="alert info" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Guncellendi"]
    </div>
}

@if (TempData["Silindi"] != null)
{

    <div class="alert warning" id=mainAlertMessage>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @TempData["Silindi"]
    </div>
}
<table id="example" class="display nowrap" style="width:100%">
    <thead>
        <tr>
            <th>İşlemler</th>
            <th>Misyon</th>
        
            <th>Vizyon</th>
            <th>Hedefler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*<a class="btn btn-danger" asp-action="HakkimizdaSil" asp-controller="AdminHakkimizda" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to DELETE?');">Sil</a><br />*@
                    <a class="btn btn-info" asp-action="KullanciSil" asp-controller="AdminHakkimizda" asp-route-id="@item.ID">Guncelle</a><br />

                </td>


                <td>@item.Misyon</td>
               
                <td>@item.Vizyon</td>
                <td>@item.Hedefler</td>


            </tr>
        }
    </tbody>
</table>