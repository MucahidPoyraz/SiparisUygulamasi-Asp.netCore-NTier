
@{
    Layout = "_Layout";
}
@model List<Urun>

<div class="breadcrumb">
    <h1>Category</h1>
    <ul>
        <li><a href="index.html">Ürünler</a></li>
        <li class="active">Category</li>
    </ul>
</div>

<div class="container mt_80 ">
    <div class="row">
        <div class="col-sm-12 mb_30">
            <div class="category-page-wrapper mb_30">
                @*<div class="col-xs-6 sort-wrapper">
                    <label class="control-label" for="input-sort">Sırala :</label>
                    <div class="sort-inner">
                        <select id="input-sort" class="form-control">
                            <a href="javascript:void(0);" class="btn btn-success" onclick="sortByName(0);">
                            <option value="ASC">İsime Göre (A - Z)</option></a>
                            <option value="ASC" selected="selected">Akıllı Sıralama</option>

                            <option value="DESC">İsime Göre (Z - A)</option>
                            <option value="ASC">Fiyata Göre (Düşük &gt; Yüksek)</option>
                            <option value="DESC">Fiyata Göre (Yüksek &gt; Düşük)</option>

                        </select>
                    </div>
                </div>*@

                <div class="col-xs-2 text-right list-grid-wrapper">
                    <div class="btn-group btn-list-grid">
                        <button type="button" id="list-view" class="btn btn-default list-view"></button>
                        <button type="button" id="grid-view" class="btn btn-default grid-view active"></button>
                    </div>
                </div>
            </div>
            <div class="row products">
                @foreach (var item in Model)
                {

                    <div class="product-layout  product-grid product   col-lg-4 col-md-4 col-xs-6 " data-price="@item.Fiyat">
                        <div class="item">
                            <div class=" clearfix mb_30">
                                <div class="image ">
                                    <a asp-action="UrunDetay" asp-controller="Urun" asp-route-id="@item.ID">
                                        <img data-name="product_image" src="/b001/images/product/product3.jpg" alt="@item.Ad"
                                             title="@item.Ad" class="img-responsive">
                                    </a>
                                </div>
                                <div class="caption product-detail text-left">
                                    <h6 data-name="product_name" class="product-name name mt_20">
                                        <a href="#" title="Casual Shirt With Ruffle Hem">@item.Ad</a>
                                    </h6>

                                    <span class="price"><span class="amount"><span class="currencySymbol">₺</span>@item.Fiyat</span> </span>
                                    <p class="product-desc mt_20 mb_60"> @item.Aciklama</p>

                                </div>
                            </div>
                        </div>
                    </div>


                }
            </div>

            </div>
    </div>
</div>